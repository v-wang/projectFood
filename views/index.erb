<div id = "login_wrap">

	<header id = "login_header">hello</header>

	<div id="tab_div">
		<div id="login_tab">log in</div>
		<div id="signup_tab">sign up</div>
	</div>

	<div id ="login_form">
	<form action="/signin" method="post">
		  <input class= "textbox" type="text" name="[user]email" placeholder="email">
			<br/>
		  <input class= "textbox" type="password" name="[user]password" placeholder="password">
			<br>

		  <input type="submit" id="signinButton" value="sign in">
	<!-- <a id="signupLink"> sign up </a> -->
	</form>
	</div>
  
<!-- SIGN UP DIV HIDDEN UNTIL CLICKED -->

	<div id = "signup_form">

	<form method="post" action="/signup">
		  <input class= "textbox" type="text" name="[user]email" placeholder="email">
			<br/>
		  <input class= "textbox" type="password" name="[user]password" placeholder="password">
			<br>
			<input class= "textbox" type="text" name="[user]fname" placeholder="first name">
			<br>
			<input class= "textbox" type="text" name="[user]lname" placeholder="last name">
			<br>
			<input class= "textbox" type="integer" name="[user]zipcode" placeholder="zip code">
			<br>

		  <input type="submit" id="signupButton" value="sign up">

	</form>


	</div>

	<% if !flash[:notice].nil? %>
		<div class="notice">
		<%= flash[:notice] %>
		</div>
	<% end %>
	
</div>



</div>

